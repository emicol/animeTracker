{
  "name": "anime-tracker-mobile",
  "version": "1.8.419",
  "description": "Mobile app for Anime History Tracker",
  "scripts": {
    "build": "npm run build:pwa && npx cap sync",
    "build:pwa": "cd ../pwa && npm run build && cp -r dist/* ../mobile/www/",
    "build:apk": "../scripts/build-and-serve.sh",
    "update:version": "../scripts/update-version.sh",
    "dev": "npx cap run android --livereload --external",
    "android": "npx cap run android",
    "ios": "npx cap run ios",
    "sync": "npx cap sync",
    "copy": "npx cap copy",
    "update": "npx cap update"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0"
  }
}
